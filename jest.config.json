{
  "transform": {
    "^.+\\.jsx?$": "<rootDir>/__tests__/utils/jest.transform.js"
  },
  "testMatch": ["<rootDir>/src/**/*.(spec|test).js?(x)"],
  "testPathIgnorePatterns": ["/node_modules/", "/.cache/", "/public", "/__tests__/"],
  "setupFiles": [
    "<rootDir>/__tests__/utils/testSetup.js"
  ],
  "moduleFileExtensions": ["jsx", "js"],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}"
  ],
  "coverageDirectory": "<rootDir>/coverage",
  "coverageReporters": ["lcov", "text", "html"],
  "globals": {
    "__PATH_PREFIX__": ""
  }
}
